# Команда старту
@bot.message_handler(commands=["start", "help"])
def send_welcome(message):
    bot.reply_to(message, "Привіт! Я бот для створення гороскопів. Введіть ваш знак Зодіаку, щоб отримати прогноз!")

# Основна логіка гороскопу
@bot.message_handler(func=lambda message: True)
def get_horoscope(message):
    sign = message.text.capitalize()  # Приводимо текст до відповідного формату
    daily_horoscope = horoscope.get(sign)

    if daily_horoscope:
        response = f"Гороскоп для {sign}:\n"
        for category, prediction in daily_horoscope.items():
            response += f"- {category}: {prediction}\n"
        bot.reply_to(message, response)
    else:
        bot.reply_to(message, "На жаль, я не розпізнав цей знак Зодіаку. Спробуйте ще раз!")

# Запуск бота
print("Бот запущено...")
bot.infinity_polling()
